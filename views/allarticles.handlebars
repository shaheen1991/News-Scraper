{{!-- Un-Saved Articles Display Area --}}
<div class="container-fluid px-2">
  <div class="col-lg-12" id="search-results">

    {{#each articles}}

    <div id={{this.id}}>
        <div class="card mb-4">
          <h3 class="card-header bg-primary text-white">{{this.title}}</h3>
          <div class="card-body">
            <p class="card-text">{{this.summary}}</p>
            <button class="btn btn-success btn-sm" id="savearticle" data-id={{this.id}}>SAVE ARTICLE</button>
          </div>
        </div>
    </div>

    {{/each}}
    
    {{#if articles}}
    <footer class="footer py-3">
      <div class="container text-center">
        <button type="button" class="btn btn-light btn-sm" id="cleardb">CLEAR DATABASE</button>
      </div>
    </footer>
    {{else}}
      <div class="card">
        <h3 class="card-header bg-warning text-white text-center">
          Uh Oh. Looks like we don't have any news articles.
        </h3>
      </div>
     {{/if}}

  </div>
</div>